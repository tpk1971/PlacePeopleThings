# Example .env for local development
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ppt_db
PORT=3000
# Set this to 'true' if your Postgres requires SSL (e.g., in some cloud providers)
DB_SSL=false
NODE_ENV=development
{
  "watch": ["src"],
  "ext": "ts",
  "ignore": ["dist/*", "node_modules/*", ".git/*"],
  "execMap": {
    "ts": "ts-node"
  },
  "delay": "250",
  "signal": "SIGTERM"
}

